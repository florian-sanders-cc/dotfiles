{
  "redact_private_values": true,
  "show_edit_predictions": true,
  "edit_predictions": {
    "mode": "subtle"
  },
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "agent": {
    "always_allow_tool_actions": true,
    "profiles": {
      "ask": {
        "name": "Ask",
        "tools": {
          "contents": true,
          "diagnostics": true,
          "fetch": true,
          "list_directory": true,
          "project_notifications": false,
          "now": true,
          "find_path": true,
          "read_file": true,
          "open": true,
          "grep": true,
          "thinking": true,
          "web_search": true
        },
        "enable_all_context_servers": false,
        "context_servers": {
          "claude-code": {
            "tools": {
              "Write": true,
              "WebSearch": true,
              "WebFetch": true,
              "TodoWrite": true,
              "Task": true,
              "Read": true,
              "NotebookEdit": true,
              "MultiEdit": true,
              "LS": true,
              "KillBash": true,
              "Grep": true,
              "Glob": true,
              "ExitPlanMode": true,
              "Edit": true,
              "BashOutput": true,
              "Bash": true
            }
          }
        }
      }
    },
    "default_profile": "write",
    "inline_assistant_model": {
      "provider": "google",
      "model": "gemini-2.5-flash"
    },
    "default_model": {
      "provider": "google",
      "model": "gemini-2.5-flash"
    }
  },
  "tab_bar": {
    "show": false
  },
  "indent_guides": {
    "enabled": true,
    "coloring": "fixed"
  },
  "git": {
    "inline_blame": {
      "enabled": true, // Show/hide inline blame
      "delay_ms": 0, // Show after delay (ms)
      "min_column": 0, // Minimum column to inline display blame
      "padding": 7, // Padding between code and inline blame (em)
      "show_commit_summary": true // Show/hide commit summary
    },
    "hunk_style": "staged_hollow" // staged_hollow, unstaged_hollow
  },
  "project_panel": {
    "button": true,
    "dock": "left",
    "git_status": true
  },
  "tabs": {
    "file_icons": true
  },
  "vim_mode": true,
  "ui_font_size": 16,
  "ui_font_weight": 300,
  "buffer_font_size": 16.0,
  "buffer_line_height": {
    "custom": 2.1
  },
  "theme": {
    "mode": "system",
    "light": "One Dark",
    "dark": "Nordic"
  },
  "terminal": {
    "font_weight": 399.0,
    "dock": "bottom",
    "env": {
      "EDITOR": "zed --wait"
    }
  },
  "vim": {
    "use_system_clipboard": "on_yank",
    // Let `f` and `t` motions match case insensitively if the target is lowercase
    "use_smartcase_find": true
    // Use relative line numbers in normal mode, absolute in insert mode
    // c.f. https://github.com/jeffkreeftmeijer/vim-numbertoggle
    // "toggle_relative_line_numbers": true
  },
  "buffer_font_family": "JetBrainsMono Nerd Font",
  "buffer_font_weight": 300,
  // use relative line numbers
  "relative_line_numbers": false,
  // hide the scroll bar
  "scrollbar": {
    "show": "never"
  },
  // prevent the buffer from scrolling beyond the last line
  "scroll_beyond_last_line": "off",
  // allow cursor to reach edges of screen
  "vertical_scroll_margin": 0,
  "command_aliases": {
    "W": "w",
    "Wq": "wq",
    "Q": "q"
  },
  "tab_size": 2,
  "experimental.theme_overrides": {
    "editor.indent_guide_active": "#5B616C",
    "editor.active_line.background": "#242933",
    "editor.indent_guide": "#242933",
    "hint": "#465253"
  },
  "lsp": {
    "vtsls": {
      "settings": {
        "typescript": {
          "tsserver": {
            "maxTsServerMemory": 16184
          },
          "preferences": {
            "useAliasesForRenames": false,
            "format": {
              "enable": false
            },
            "importModuleSpecifier": "relative"
          }
        },
        "javascript": {
          "suggest": {
            "completeFunctionCalls": true
          },
          "tsserver": {
            "maxTsServerMemory": 16184
          },
          "experimental": {
            "completion": {
              "enableServerSideFuzzyMatch": true,
              "entriesLimit": 50
            }
          },
          "preferences": {
            "useAliasesForRenames": false,
            "format": {
              "enable": false
            },
            "experimental": {
              "completion": {
                "enableServerSideFuzzyMatch": true,
                "entriesLimit": 50
              }
            },
            "importModuleSpecifier": "relative"
          }
        }
      }
    }
  },
  "languages": {
    "Markdown": {
      "show_edit_predictions": false
    },
    "HTML": {
      "language_servers": ["vscode-html-language-server", "vtsls"]
    }
  }
}
