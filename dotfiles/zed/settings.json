// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette
{
  "show_edit_predictions": true,
  "edit_predictions": { "mode": "subtle" },
  "features": {
    "edit_prediction_provider": "zed"
  },
  "assistant": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-7-sonnet-latest"
    },
    "version": "2"
  },
  "tab_bar": {
    "show": false
  },
  "indent_guides": {
    "enabled": true,
    "coloring": "indent_aware"
  },
  "project_panel": {
    "button": true,
    "dock": "left",
    "git_status": true
  },
  "tabs": { "file_icons": true },
  "vim_mode": true,
  "ui_font_size": 16,
  "buffer_font_size": 16.0,
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "One Dark"
  },
  "terminal": {
    "env": {
      "EDITOR": "zed --wait"
    }
  },
  "vim": {
    "use_system_clipboard": "on_yank",
    // Let `f` and `t` motions extend across multiple lines
    "use_multiline_find": true,
    // Let `f` and `t` motions match case insensitively if the target is lowercase
    "use_smartcase_find": true
    // Use relative line numbers in normal mode, absolute in insert mode
    // c.f. https://github.com/jeffkreeftmeijer/vim-numbertoggle
    // "toggle_relative_line_numbers": true
  },
  "buffer_font_family": "JetBrainsMono Nerd Font",
  // use relative line numbers
  "relative_line_numbers": false,
  // hide the scroll bar
  "scrollbar": {
    "show": "never"
  },
  // prevent the buffer from scrolling beyond the last line
  "scroll_beyond_last_line": "off",
  // allow cursor to reach edges of screen
  "vertical_scroll_margin": 0,
  "command_aliases": {
    "W": "w",
    "Wq": "wq",
    "Q": "q"
  },
  "tab_size": 2,
  "lsp": {
    "vtsls": {
      "settings": {
        "javascript": {
          "preferences": {
            "importModuleSpecifier": "relative"
          }
        }
      }
    }
  },
  "languages": {
    "Nix": {
      "language_servers": ["nixd", "!nil"]
    }
  }
}
